<Page
    x:Class="DB2_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DB2_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" >
            <Button x:Name="ActiveCases" Click="ActiveCases_Click" Content="Active Cases" Width="255"  Height="40" FontWeight="Normal" FontStyle="Normal" Margin="10,50,10,10"/>
            <Button x:Name="btnCompCases" Click="btnCompCases_Click"  Content="Completed Cases" Width="255"   Height="40" Margin="10" />
            <Button x:Name="btnAddCase" Click="btnAddCase_Click" Content="Add new Case" Width="255"   Height="40" Margin="10" FontWeight="Normal" FontStyle="Normal" />
            
        </StackPanel>
        <Image Grid.Column="1" HorizontalAlignment="Right" Height="100" VerticalAlignment="Top" Margin="30" Width="100" Source="/Assets/c-sharp.png"/>




    </Grid>
</Page>
